{
  "name": "OpenFactory-SDK Dev Container",
  "image": "mcr.microsoft.com/devcontainers/python:3.13-bookworm",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "./features/infra": {
      "useLocalSdk": true,
      "openfactory-version": "main"
    },
    "./features/opcua-connector": {
      "useLocalSdk": true,
      "opcua-connector-version": "latest"
    }
  },
  "containerEnv": {
    "OPENFACTORY_ENV": "dev",
    "ENVIRONMENT": "local",
    "DEPLOYMENT_PLATFORM": "docker",
    "OPENFACTORY_UNS_SCHEMA": "/workspaces/openfactory-sdk/.devcontainer/uns.yml"
  },
  "postCreateCommand": "pip install -e /workspaces/openfactory-sdk[dev]",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      },
      "extensions": [
        "ms-python.python",
        "ms-azuretools.vscode-docker"
      ]
    }
  }
}
