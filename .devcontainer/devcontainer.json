{
  "name": "OpenFactory-SDK Dev Container",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".",
    "args": {
      "USERNAME": "vscode",
      "USER_UID": "1000",
      "USER_GID": "1000"
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2.12.4": {},
    "./features/infra": {
      "useLocalSdk": true,
      "openfactory-version": "main"
    },
    "./features/opcua-connector": {
      "useLocalSdk": true,
      "opcua-coordinator-version": "latest",
      "opcua-gateway-version": "latest"
    }
  },
  "containerEnv": {
    "OPENFACTORY_ENV": "dev",
    "ENVIRONMENT": "local",
    "DEPLOYMENT_PLATFORM": "docker",
    "OPENFACTORY_UNS_SCHEMA": "/workspaces/openfactory-sdk/.devcontainer/uns.yml"
  },
  "postCreateCommand": "pip install -e /workspaces/openfactory-sdk[dev]",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      },
      "extensions": [
        "ms-python.python",
        "ms-azuretools.vscode-docker"
      ]
    }
  }
}
